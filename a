#include <stdio.h>

// Definindo a estrutura Funcionario fora do main
typedef struct {
    char nome[50];
    float vendasMensais[3];
    float pontuacaoMensal[3]; // Alterado para float para considerar pontos fracionados
    float pontuacaoTotal;
} Funcionario;

int main() {
    Funcionario func[2];
    int i, j;
    float totalVendido = 0;

    // Cadastro dos funcionários e suas vendas mensais
    for (i = 0; i < 2; i++) {
        printf("Digite o nome do funcionario %d: ", i + 1);
        scanf("%s", func[i].nome);
        func[i].pontuacaoTotal = 0;

        for (j = 0; j < 3; j++) {
            printf("Digite as vendas do mes %d do funcionario %s: ", j + 1, func[i].nome);
            scanf("%f", &func[i].vendasMensais[j]);
            func[i].pontuacaoMensal[j] = func[i].vendasMensais[j] / 1000.0; // Calculando pontos fracionados
            func[i].pontuacaoTotal += func[i].pontuacaoMensal[j];
            totalVendido += func[i].vendasMensais[j];
        }
    }

    // Mostrar a pontuação mensal de cada funcionário
    for (i = 0; i < 2; i++) {
        printf("\nPontuacao mensal do funcionario %s:\n", func[i].nome);
        for (j = 0; j < 3; j++) {
            printf("Mes %d: %.2f pontos\n", j + 1, func[i].pontuacaoMensal[j]);
        }
    }

    // Determinar o funcionário com a maior pontuação total
    int indiceMaior = 0;
    for (i = 1; i < 2; i++) {
        if (func[i].pontuacaoTotal > func[indiceMaior].pontuacaoTotal) {
            indiceMaior = i;
        }
    }
    printf("\nFuncionario com maior pontuacao total: %s\n", func[indiceMaior].nome);
    printf("Valor total vendido por todos os funcionarios: R$ %.2f\n", totalVendido);

    return 0;
}